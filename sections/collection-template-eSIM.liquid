<div class="related_img">
  <div class="related_inner">
    {%- assign blog_tag1 = collection.title | replace: " ", "-" | replace: ",", "" | replace: "/-", "" | downcase | prepend: 'blog-' -%}
    {%- assign blog_tag2 = collection.title | replace: " ", "-" | replace: ",", "" | replace: "/-", "" | capitalize  | prepend: 'blog-' -%}
    {%- assign count = 1 -%}

    {% for article in blogs.news.articles %}
    {% if article.tags contains blog_tag1 or article.tags contains blog_tag2 %}
    {% if count == 1 %}
    <h2>Related Blog</h2>
    {% endif %}
    <!-- first image in blog post content -->
    {% if count < 4 %}
    <div class="related_dtl_main">
      <div class="related_image">
        <a href="{{ article.url }}" class="text-colored">

          <!-- if featured image display that -->
          {% if article.image %}
          <div class="hero-image-new"><img class="lazyload hs-lazyload hs-id-6cef5e3d" data-src="{{ article | img_url: 'large' , crop: 'center', scale: 2 }}" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="/></div>
          {% else %}
          <div class="hero-image-new"><img src="//cdn.shopify.com/s/assets/no-image-2048-5e88c1b20e087fb7bbe9a3771824e743c244f437e4f8ba93bbf7b11b53f7824c_1024x.gif"></div>
          {% endif %}
        </a>
      </div>
      <!-- /first image in blog post content -->
      <div class="related_content">
        <h3><a href="{{ article.url }}">Article: {{ article.title }}</a></h3>
        <p>{{ article.content | strip_html | truncate: 300}}</p>
      </div>
    </div>
    {% endif %}
    {% if count == 4 %}
    <div class="text-center blog_view_more">
      <a href="/pages/blog" class="relink"><b>View More</b> <img class="lazyload hs-lazyload hs-id-98058c16" data-src="https://cdn.shopify.com/s/files/1/0179/4388/7926/files/sub_menu_arrow.svg?5503" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="/></a>
    </div>
    {% endif %}
    {% assign count = count | plus: 1 %}
    {% endif %}
    {% endfor %}


  </div>

</div>


