                <script>
                  $(document).ready(function() {
                    var mainSlider = $('#main-slider');
                    var thumbnailSlider = $('#thumbnail-slider');
                
                    mainSlider.slick({
                      slidesToShow: 1,
                      slidesToScroll: 1,
                      arrows: true,
                      fade: true,
                      asNavFor: '#thumbnail-slider'
                    });
                
                    thumbnailSlider.slick({
                      slidesToShow: 5,
                      slidesToScroll: 1,
                      asNavFor: '#main-slider',
                      dots: false,
                      centerMode: false,
                      focusOnSelect: true,
                      infinite: true,
                      responsive: [
                        {
                          breakpoint: 768,
                          settings: {
                            slidesToShow: 3
                          }
                        }
                      ]
                    });
                
                    // Ensure synchronization of main slider with thumbnail slider
                    mainSlider.on('afterChange', function(event, slick, currentSlide) {
                      thumbnailSlider.slick('slickGoTo', currentSlide);
                    });
                  });
