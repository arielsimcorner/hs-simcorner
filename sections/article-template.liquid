                  <h2>Related Sim Cards</h2>
                  <div class="travel-product-list">
                    {% assign displayed_products = 0 %}

                    {% paginate collection.products by 1000 %}
                    {% for product in collection.products %}
                    {% if product.title contains tagsString %}
                    {% include 'product-grid-item' %}
                    {% assign displayed_products = displayed_products | plus: 1 %}

                    {% if displayed_products == 6 %}
                    {% break %}
                    {% endif %}
                    {% endif %}
                    {% endfor %}
                    {% endpaginate %}

                    {% if displayed_products == 0 %}
                    <style>
                      .blog-related-products {
                        display: none;
                      }
                    </style>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
            {% endif %}
            <!-- End Related Products -->

            <div class="related-guide-container">
              <div class="back-to-guides">
              <h2>Related Travel Posts</h2>
              <a href="/blogs/travel-guides/">View More <img src="https://cdn.shopify.com/s/files/1/0179/4388/7926/files/arrow_view.svg?v=1585130491"></a>
