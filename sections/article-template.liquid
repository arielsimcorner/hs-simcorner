  <div class="travel-single-post">
    <article class="travel-single-container">
      <div class="travel-single-inner">
        <div class="travel-single-blog">

          <script>
            document.addEventListener("DOMContentLoaded", function () {
              // Get all the h3 elements inside travel-single-blog
              const h3Elements = document.querySelectorAll('#travel-single-blog h3');

              if (h3Elements.length === 0) {
                console.error("No h3 elements found inside #travel-single-blog");
                return;
              }

              // Create a div for the table of contents
              const tableOfContents = document.createElement('div');
              tableOfContents.className = 'table-of-contents';

              // Create a container div for the table of contents and buttons
              const tocContainer = document.createElement('div');
              tocContainer.classList.add('toc-container');

              // Create a heading for the table of contents
              const tableOfContentsHeading = document.createElement('h4');
              tableOfContentsHeading.textContent = 'Table of Contents';
              tocContainer.appendChild(tableOfContentsHeading);

              // Create a "View More" button to show the remaining items
              const viewMoreButton = document.createElement('button');
              viewMoreButton.textContent = '[ Show ]';
              tocContainer.appendChild(viewMoreButton);

              // Create a "View Less" button to hide the additional items
              const viewLessButton = document.createElement('button');
              viewLessButton.textContent = '[ Hide ]';
              viewLessButton.style.display = 'none'; // Initially hide the "View Less" button
              tocContainer.appendChild(viewLessButton);

              // Add the container to the document
              tableOfContents.appendChild(tocContainer);

              // Create an ordered list for the contents
              const ol = document.createElement('ul');

              // Loop through each h3 element and create list items
              h3Elements.forEach((h3, index) => {
                const li = document.createElement('li');
                const a = document.createElement('a');
                a.href = `#section-${index}`;
                a.textContent = h3.textContent;
                li.appendChild(a);
                ol.appendChild(li);

                // Add an ID to the h3 element for linking
                h3.id = `section-${index}`;
              });

              // Append the ordered list to the table of contents
              tableOfContents.appendChild(ol);

              // Insert the table of contents just after the <h2> element
              const blogHeaderTwo = document.getElementById('travel-single-blog');

              if (!blogHeaderTwo) {
                console.error("Element with ID 'blog-header-two' not found");
                return;
              }

              blogHeaderTwo.insertAdjacentElement('beforebegin', tableOfContents);

              // Initially hide all list items except the first 3
              const listItems = ol.querySelectorAll('li');
              for (let i = 0; i < listItems.length; i++) {
                listItems[i].style.display = 'none';
              }

              // Add a click event to the "View More" button
              viewMoreButton.addEventListener('click', function () {
                // Show the remaining list items
                for (let i = 0; i < listItems.length; i++) {
                  listItems[i].style.display = 'list-item';
                }
                // Show the "View Less" button
                viewLessButton.style.display = 'inline-block';
                // Hide the "View More" button
                viewMoreButton.style.display = 'none';
              });

              // Add a click event to the "View Less" button
              viewLessButton.addEventListener('click', function () {
                // Hide the additional list items
                for (let i = 0; i < listItems.length; i++) {
                  listItems[i].style.display = 'none';
                }
                // Show the "View More" button
                viewMoreButton.style.display = 'inline-block';
                // Hide the "View Less" button
                viewLessButton.style.display = 'none';
              });

              // Add smooth scrolling behavior for anchor links with an offset
              const anchorLinks = document.querySelectorAll('.table-of-contents a');
              anchorLinks.forEach((link) => {
                link.addEventListener('click', function (e) {
                  e.preventDefault();
                  const targetId = link.getAttribute('href').substring(1);
                  const targetElement = document.getElementById(targetId);
                  if (targetElement) {
                    // Check if it's a mobile device based on the screen width
                    const isMobile = window.innerWidth < 768; // You can adjust the breakpoint as needed

                    // Calculate the scroll position with the appropriate offset
                    const offset = isMobile ? -150 : -300;
                    window.scrollTo({
                      top: targetElement.offsetTop + offset,
                      behavior: 'smooth',
                    });
                  }
                });
              });
            });
          </script>
