                <div class="related" id="next-post">
                  {{ blog.next_article.title | link_to: blog.next_article }} &rarr;
                </div>
              </div>

              <script>
                // Check if the screen width is below 768px
                if (window.innerWidth < 1024) {
                  // Replace the text with "Previous Post" and "Next Post"
                  document.getElementById('prev-post').innerHTML = '&larr; Previous Post';
                  document.getElementById('next-post').innerHTML = 'Next Post &rarr;';
                }
              </script>
              {% endif %}
